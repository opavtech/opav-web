{
  "kind": "collectionType",
  "collectionName": "inmuebles",
  "info": {
    "singularName": "inmueble",
    "pluralName": "inmuebles",
    "displayName": "Inmueble",
    "description": "Propiedades en arriendo o venta"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "titulo": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "descripcion": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "precio": {
      "type": "decimal",
      "required": true
    },
    "tipo": {
      "type": "enumeration",
      "enum": ["arriendo", "venta"],
      "required": true
    },
    "ciudad": {
      "type": "string",
      "required": true
    },
    "direccion": {
      "type": "string"
    },
    "area": {
      "type": "decimal",
      "required": true
    },
    "areaUnidad": {
      "type": "enumeration",
      "enum": ["m2", "ft2"],
      "default": "m2"
    },
    "pisos": {
      "type": "integer"
    },
    "parqueaderos": {
      "type": "integer",
      "default": 0
    },
    "estrato": {
      "type": "integer",
      "min": 1,
      "max": 6
    },
    "administracion": {
      "type": "decimal"
    },
    "imagenes": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": ["images"]
    },
    "coordenadas": {
      "type": "json"
    },
    "estado": {
      "type": "enumeration",
      "enum": ["disponible", "reservado", "arrendado", "vendido"],
      "default": "disponible",
      "required": true
    },
    "destacado": {
      "type": "boolean",
      "default": false
    },
    "caracteristicas": {
      "type": "json"
    }
  }
}