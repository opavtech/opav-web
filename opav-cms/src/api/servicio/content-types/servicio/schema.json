{
  "kind": "collectionType",
  "collectionName": "servicios",
  "info": {
    "singularName": "servicio",
    "pluralName": "servicios",
    "displayName": "Servicio",
    "description": "Servicios ofrecidos por OPAV y B&S"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "nombre": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "descripcion": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "categoria": {
      "type": "enumeration",
      "enum": ["gerencia_edificios", "facilities", "administracion_corporativa"],
      "required": true
    },
    "subServicios": {
      "type": "json"
    },
    "icono": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "imagenDestacada": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "beneficios": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "destacado": {
      "type": "boolean",
      "default": false
    },
    "orden": {
      "type": "integer",
      "default": 0
    }
  }
}